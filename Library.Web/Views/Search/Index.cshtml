@model IEnumerable<IssuedBookViewModel>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <form method="get">
            <div class="row">
                <div class="col-4">
                    <input type="text" class="form-control" value="@ViewBag.SearchValue" name="search" placeholder="Search..." />
                </div>
                <div class="col-4">
                    <button class="btn btn-success">Search</button>
                </div>
            </div>
        </form>
    </div>
    <div class="card-body p-4">

        <table class="table">
            <thead>
                <tr>
                    <th>Book Reference</th>
                    <th>Title</th>
                    <th>Publication</th>
                    <th>Author</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Issue Date</th>
                    <th>Return Date</th>
                </tr>
            </thead>


            @if (Model.Any())
            {
                
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                            <td>@item.Book.BookReference</td>
                            <td>@item.Book.Title</td>
                            <td>@item.Book.Publication</td>
                            <td>@item.Book.Author</td>
                            <td>@item.Student.FirstName</td>
                            <td>@item.Student.LastName</td>
                            <td>@item.IssuingBook.IssueDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.IssuingBook.ReturnDate.ToString("yyyy-MM-dd")</td>
                    </tr>
                    }
                </tbody>
            }


            


        </table>

    </div>

</div>