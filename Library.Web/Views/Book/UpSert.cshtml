@model BookDTO

<form method="post">
    <input asp-for="BookId" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">@(Model.BookId == 0 ? "Create" : "Update")  Book</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="BookReference"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="BookReference" />
                <span class="text-danger" asp-validation-for="BookReference"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="ISBN"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="ISBN" />
                <span class="text-danger" asp-validation-for="ISBN"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="Title"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Title" />
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="Author"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Author" />
                <span class="text-danger" asp-validation-for="Author"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="Publication"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Publication" />
                <span class="text-danger" asp-validation-for="Publication"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="Edition"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Edition" />
                <span class="text-danger" asp-validation-for="Edition"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="PublishedYear"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="PublishedYear" />
                <span class="text-danger" asp-validation-for="PublishedYear"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="NoOfCopies"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="NoOfCopies" />
                <span class="text-danger" asp-validation-for="NoOfCopies"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="Category"></label>
            </div>
            <div class="col-10 pb-3">
                <select class="form-select" asp-items="@Model.CategoryList" asp-for="Category">
                    <option disabled selected>--Please Select--</option>
                </select>
                <span class="text-danger" asp-validation-for="Category"></span>
            </div>

            <div class="col-5 offset-2 pt-3">
                <a class="btn-primary btn form-control " asp-action="Index">Back to List</a>
            </div>
            <div class="col-5 pt-3">
                <button type="submit" class="btn btn-success form-control">
                    @(Model.BookId == 0 ? "Create" : "Update")
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <Partial name="_ValidationScriptsPartial" />
}

