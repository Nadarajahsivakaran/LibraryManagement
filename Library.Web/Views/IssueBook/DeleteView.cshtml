@model IssuingBooks

<form action="DeleteView" method="post">
    <input asp-for="IssuingBookId" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Issue Book Detail </h1>
        <hr />
        <div class="row">


            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="StudentId"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Book.Title" class="form-control" disabled />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="BookId"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Student.FirstName" class="form-control" disabled />
            </div>


            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="NoOfCopies"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="NoOfCopies" disabled />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="IssueDate"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="text" class="form-control" id="IssueDate" asp-for="IssueDate" disabled />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="ReturnDate"></label>
            </div>
            <div class="col-10 pb-3">
                <input type="text" class="form-control" id="ReturnDate" asp-for="ReturnDate" disabled />
            </div>

            <div class="col-5 offset-2 pt-3">
                <a class="btn-primary btn form-control " asp-action="Index">Back to List</a>
            </div>
            <div class="col-5 pt-3">
                <button type="submit" class="btn btn-danger form-control">
                    Delete
                </button>
            </div>

        </div>
    </div>
</form>

@section Scripts{
    <Partial name="_ValidationScriptsPartial" />

    <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#IssueDate').daterangepicker({
                singleDatePicker: true,
                showDropdowns: true,
                minYear: 2000,
                maxYear: parseInt(moment().format('YYYY'), 10),
                maxDate: moment()
            });

            $('#ReturnDate').daterangepicker({
                singleDatePicker: true,
                showDropdowns: true,
                minYear: parseInt(moment().format('YYYY'), 10)

            });
        });
    </script>
}

